local isMaximized = false

-- X·ª≠ l√Ω khi b·∫•m n√∫t Thu Nh·ªè
minimizeButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
end)

-- X·ª≠ l√Ω khi b·∫•m n√∫t Ph√≥ng To
maximizeButton.MouseButton1Click:Connect(function()
    if isMaximized then
        -- Quay l·∫°i k√≠ch th∆∞·ªõc ban ƒë·∫ßu
        mainFrame.Size = originalSize
        mainFrame.Position = originalPosition
        isMaximized = false
    else
        -- Ph√≥ng to m√†n h√¨nh
        mainFrame.Size = UDim2.new(1, -100, 1, -100) -- G·∫ßn full m√†n h√¨nh
        mainFrame.Position = UDim2.new(0, 50, 0, 50)
        isMaximized = true
    end
end)

-- X·ª≠ l√Ω khi b·∫•m n√∫t ƒê√≥ng
