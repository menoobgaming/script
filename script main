    screenGui:Destroy() -- X√≥a to√†n b·ªô UI
    print("‚ùå Menoob Hub ƒë√£ b·ªã t·∫Øt.")
end)

-- T·∫°o Tabs
local tabFrame = Instance.new("Frame")
tabFrame.Size = UDim2.new(0, 160, 1, -40)
tabFrame.Position = UDim2.new(0, 0, 0, 40)
